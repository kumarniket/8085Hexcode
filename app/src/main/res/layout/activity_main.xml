<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:background="#5ee0d7"
    tools:context="com.example.nk.a8085hexcode.MainActivity">



    <TextView
        android:id="@+id/txt_opcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="Convert Mnemonic to Hex code"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        card_view:cardBackgroundColor="#22d8cc"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        card_view:cardCornerRadius="40dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <EditText
            android:id="@+id/txt_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:background="#ffffff"
            android:hint="Enter opcode/Mnemonic.."
            android:maxLines="1"
            android:paddingTop="20dp"
            android:textColor=" #020202"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_input"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="110dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#fcff7f"
            android:textAlignment="center"
            android:enabled="false"
            android:paddingTop="20dp"
            android:textColor=" #020202"
            android:textSize="20sp" />
    </RelativeLayout>

    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/btn_1"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txt_output"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#b22a41"
        android:text="Hex Code"
        android:textStyle="bold"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txtlink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:text="@string/niket"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>




</LinearLayout>

